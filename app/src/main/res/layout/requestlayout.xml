<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginTop="100dp"

    android:background="#fff"
    tools:layout_editor_absoluteX="10dp"
    tools:layout_editor_absoluteY="10dp">


    <TextView
        android:id="@+id/username"
        android:layout_width="323dp"
        android:layout_height="38dp"
        android:layout_x="39dp"
        android:layout_y="17dp"
        android:text="TextView"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="18dp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="323dp"
        android:layout_height="38dp"
        android:layout_x="38dp"
        android:layout_y="56dp"
        android:text="TextView"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="42dp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="323dp"
        android:layout_height="38dp"
        android:layout_x="37dp"
        android:layout_y="94dp"
        android:text="TextView"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="93dp" />

    <TextView
        android:id="@+id/address"
        android:layout_width="323dp"
        android:layout_height="38dp"
        android:layout_x="37dp"
        android:layout_y="128dp"
        android:text="TextView"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="132dp" />

    <TextView
        android:id="@+id/notes"
        android:layout_width="323dp"
        android:layout_height="38dp"
        android:layout_x="37dp"
        android:layout_y="171dp"
        android:text="TextView"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="174dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_x="38dp"
        android:layout_y="231dp"
        android:text="Approval"
        android:background="#008577"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="227dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_x="201dp"
        android:layout_y="227dp"
        android:text="Rejected"
        android:background="#008577"
        tools:layout_editor_absoluteX="277dp"
        tools:layout_editor_absoluteY="223dp" />
</AbsoluteLayout>